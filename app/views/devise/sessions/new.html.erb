<h2>Connexion Association</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :id_association, "RNA" %><br />
    <%= f.text_field :id_association, autofocus: true, autocomplete: "id-association", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Mot de passe" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="form-group" style="margin-top:1rem">
    <%= f.submit "Se connecter", class: "btn btn-lg btn-success" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
