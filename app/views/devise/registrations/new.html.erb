<%= javascript_include_tag('registration.js') %>

<h2>Inscription Association</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :id_association, "RNA (obligatoire, puis cliquez sur Recherche Association)" %><br />
    <%= f.text_field :id_association, autofocus: true, autocomplete: "RNA", id: "rna-field", class: "form-control"  %>
    <div id="rna-result"></div>
</div>

<div class="button">
    <h6 id="search-asso" onclick="searchAsso()" 
    style="cursor:pointer;margin:10px 0;padding:5px;background-color:blue;color:white;border-radius:5px;width:20%;text-align:center;transition:0.3s;"> 
    > Recherche association</h6>
</div>

<div class="field">
    <%= f.label :name, "Nom de l'association" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Nom de l'association", id: "name-field", :readonly => true, class: "form-control"  %>
</div>

<div class="field">
    <%= f.label :acronym, "Nom court" %><br />
    <%= f.text_field :acronym, autofocus: true, autocomplete: "Nom court", id: "acronym-field", :readonly => true, class: "form-control"  %>
</div>

<div class="field">
    <%= f.label :email, "Adresse email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
</div>

<div class="field">
    <%= f.label :password, "Mot de passe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
</div>

<div class="field">
    <%= f.label :password_confirmation, "Confirmez le mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
</div>

</br>

<div class="actions">
    <%= f.submit "Valider", class: "btn btn-success" %>
</div>

<% end %>

<%= render "devise/shared/links" %>
